@model  List<SkillTreeHomeWork.Models.ViewModels.NoteBookModels>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_NoteBookLayout.cshtml";
}
<h2>SkillTree Day1 Home Work</h2>

<div class="well">
    <form class="form-horizontal">
        <div class="form-group">
            <label for="category" class="col-sm-2 control-label">類別</label>
            <div class="col-sm-10">
                <select id="category" name="category" class="form-control">
                    <option value="" selected>請選擇</option>
                    <option>支出</option>
                    <option>收入</option>
                </select>
            </div>
        </div>
        <div class="form-group">
            <label for="money" class="col-sm-2 control-label">金額</label>
            <div class="col-sm-10">
                <input type="text" class="form-control" id="money" placeholder="金額">
            </div>
        </div>
        <div class="form-group">
            <label for="date" class="col-sm-2 control-label">日期</label>
            <div class="col-sm-10">
                <input type="text" class="form-control" id="date" placeholder="日期">
            </div>
        </div>
        <div class="form-group">
            <label for="description" class="col-sm-2 control-label">備註</label>
            <div class="col-sm-10">
                <textarea class="form-control" id="description"></textarea>
            </div>
        </div>
        <div class="form-group">
            <div class="col-sm-offset-8 col-sm-4">
                <input type="submit" value="Create" class="btn btn-default" />
            </div>
        </div>
    </form>
</div>
<h2>Child Action</h2>
<div class="well">
    <div id="css_table">
        <div class="css_tr">
            <div class="css_td">#</div>
            <div class="css_td">類別</div>
            <div class="css_td">日期</div>
            <div class="css_td">金額</div>
        </div>
        @Html.Action("NoteBookChildAction")
    </div>
</div>
<h2>Partial</h2>
<div class="well">
    <div id="css_table">
        <div class="css_tr">
            <div class="css_td">#</div>
            <div class="css_td">類別</div>
            <div class="css_td">日期</div>
            <div class="css_td">金額</div>
        </div>
        @Html.Partial("_Partial",Model)
    </div>
</div>
<style>
    #css_table {
        display: table;
        border: 1px solid #c3c3c3;
        width:100%;
    }

    .css_tr {
        display: table-row;
        border: 1px solid #c3c3c3;
    }

    .css_td {
        display: table-cell;
        border: 1px solid #c3c3c3;
        width:25%;
    }
</style>



